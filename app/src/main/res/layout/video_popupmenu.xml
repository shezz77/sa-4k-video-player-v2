<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingRight="20dp"
        android:paddingLeft="22dp"

        android:background="?attr/backgroundcolor"
        android:orientation="vertical">


        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/md_falcon_500_75"
            android:id="@+id/title"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp"
            android:text=" name"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_play_arrow_black_36dp"
                app:tint="@color/md_falcon_500" />

            <TextView
                android:id="@+id/play"
                android:layout_width="340dp"
                android:layout_marginStart="20dp"
                android:layout_height="40dp"
                android:text="Play"
                android:gravity="center_vertical"
                android:textColor="?attr/textcolor"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:text="Play"
                android:layout_marginStart="8dp"
                app:tint="@color/md_falcon_500"
                android:src="@drawable/private_folder" />

            <TextView
                android:id="@+id/lock"
                android:layout_width="340dp"
                android:layout_marginStart="20dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="Lock in Private Folder"
                android:textColor="?attr/textcolor"
                android:textSize="15sp" >

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:text="Play"
                android:layout_marginStart="8dp"
                app:tint="@color/md_falcon_500"
                android:src="@drawable/baseline_favorite_black_36dp" />

            <TextView
                android:layout_width="340dp"
                android:layout_marginStart="20dp"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:id="@+id/favorite"
                android:gravity="center_vertical"
                android:textColor="?attr/textcolor"
                android:text="Add to Favorite"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:text="Play"
                android:layout_marginStart="8dp"
                app:tint="@color/md_falcon_500"
                android:src="@drawable/baseline_content_cut_black_36dp" />

        <TextView
            android:layout_width="340dp"
            android:layout_marginStart="20dp"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:id="@+id/cut_video"
            android:gravity="center_vertical"
            android:textColor="?attr/textcolor"
            android:text="Cut this Video"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:text="Play"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_share"
                app:tint="@color/md_falcon_500" />

        <TextView
            android:layout_width="340dp"
            android:layout_marginStart="20dp"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:id="@+id/share"
            android:gravity="center_vertical"
            android:textColor="?attr/textcolor"
            android:text="Share"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:text="Play"
                android:layout_marginStart="8dp"
                app:tint="@color/md_falcon_500"
                android:src="@drawable/baseline_edit_black_36dp" />

        <TextView
            android:layout_width="340dp"
            android:layout_marginStart="20dp"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:id="@+id/rename"
            android:gravity="center_vertical"
            android:textColor="?attr/textcolor"
            android:text="Rename"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:text="Play"
                android:layout_marginStart="8dp"
                app:tint="@color/md_falcon_500"
                android:src="@drawable/baseline_delete_black_36dp" />
        <TextView
            android:layout_width="340dp"
            android:layout_marginStart="20dp"
            android:layout_height="40dp"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:id="@+id/delete"
            android:textColor="?attr/textcolor"
            android:text="Delete"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:text="Play"
                android:layout_marginStart="8dp"
                app:tint="@color/md_falcon_500"
                android:src="@drawable/baseline_info_outline_black_36dp" />

        <TextView
            android:id="@+id/details"
            android:layout_width="340dp"
            android:layout_marginStart="20dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="Properties"
            android:textColor="?attr/textcolor"
            android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
